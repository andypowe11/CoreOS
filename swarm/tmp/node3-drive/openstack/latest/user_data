#cloud-config

hostname: node3

write_files: 
  - path: /etc/systemd/network/static.network 
    permissions: 0644 
    content: | 
      [Match] 
      Name=en*
      [Network] 
      Address=192.168.3.8/24 
      Gateway=192.168.3.1
      DNS=8.8.8.8
users:
  - name: core
    primary-group: wheel
    groups:
      - sudo
      - docker
    ssh-authorized-keys:
      - ssh-rsa  andypowe11@iMac.local
      
coreos:
  etcd2:
    discovery: https://discovery.etcd.io/46f3f98e4948d8dff8e865defd63f4d2
    advertise-client-urls: http://192.168.3.8:2379
    initial-advertise-peer-urls: http://192.168.3.8:2380
    listen-client-urls: http://0.0.0.0:2379,http://0.0.0.0:4001
    listen-peer-urls: http://192.168.3.8:2380
  units:
    - name: systemd-networkd.service
      command: start
    - name: runcmd.service
      command: start
      content: |
        [Unit]
        Description=Clears and re-creates sshd keys

        [Service]
        Type=oneshot
        ExecStart=/bin/sh -c "rm -f /etc/ssh/*key*; /usr/lib/coreos/sshd_keygen;"
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=4243
        BindIPv6Only=both
        Service=docker.service

        [Install]
        WantedBy=sockets.target
    - name: etcd2.service
      command: start
    - name: fleet.service
      command: start
    - name: docker-swarm.service
      command: start
      content: |
        [Unit]
        Description=Swarm service
        After=docker.service

        [Service]
        Restart=on-failure
        RestartSec=10
        ExecStartPre=-/usr/bin/docker rm 
        ExecStart=/usr/bin/docker run --name docker-swarm -d swarm join --addr=192.168.3.8:4243 etcd://192.168.3.8:2379/swarm
  update:
    reboot-strategy: best-effort

